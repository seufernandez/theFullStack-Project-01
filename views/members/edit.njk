{% extends "layout.njk" %}


{% block content %}

    <div class="card">

        <section 
            class="avatar"
            style="background: url(https://assets.bigcartel.com/product_images/222985918/Dolphin+-+WM.jpg?auto=format&fit=max&w=1000) no-repeat center center / cover;">
        </section>
    
    <section class="details">

            <form 
                method="POST"
                action="/captains?_method=PUT"> {#vai enviar os dados para a pasta instructors #}
                
                    <h3>Edit Captain</h3>


                        {% include 'captains/fields.njk' %}

                            {# deu erro porque o fields nao envia o id, então temos que de alguma forma trazer o id para chegarmos à pag desejada #}
                        <input type="hidden" 
                        name="id" 
                        value="{{captain.id}}">
            </form>

        <form id="form-delete" action="/captains?_method=DELETE" method="post">
            <input type="hidden" 
                    name="id" 
                    value="{{captain.id}}">
                    <button type="submit">Delete</button>
        </form>

    </section>



    </div>

   



{% endblock %}